#!/bin/bash

exec 2>&1

set -eu

tar -xzf nginx/*.tar.gz
tar -xzf openssl/*.tar.gz
tar -xzf pcre/*.tar.gz
tar -xzf zlib/*.tar.gz

( cd nginx-*

  ./configure \
    --prefix="$BOSH_INSTALL_TARGET" \
    --with-openssl=../openssl-* \
    --with-pcre=../pcre-* \
    --with-zlib=../zlib-* \
    --with-http_ssl_module \
    --with-http_v2_module

  make
  make install

  )

rm -fr "$BOSH_INSTALL_TARGET/html"
